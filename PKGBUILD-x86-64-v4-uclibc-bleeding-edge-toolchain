pkgname=x86-64-v4-uclibc-bleeding-edge-toolchain
pkgver=2023.08
pkgrel=1
pkgdesc="Ready-to-use cross-compilation toolchain provided by bootlin.com"
arch=("x86_64")
url="https://toolchains.bootlin.com/"
license=("GPL")
source=("https://toolchains.bootlin.com/downloads/releases/toolchains/x86-64-v4/tarballs/x86-64-v4--uclibc--bleeding-edge-2023.08-1.tar.bz2")
sha256sums=('6220868a0f3ba104a21eb6bdecaed30fb5e625a39899abd753b1d60ef3204196')

build() {
	cd "x86-64-v4--uclibc--bleeding-edge-2023.08-1"

	sh relocate-sdk.sh "/opt/x86-64-v4-uclibc-bleeding-edge"
}

package() {
	options=(!strip)

	cd "x86-64-v4--uclibc--bleeding-edge-2023.08-1"

	mkdir -p "$pkgdir/opt/x86-64-v4-uclibc-bleeding-edge/"
	cp -a * "$pkgdir/opt/x86-64-v4-uclibc-bleeding-edge/"
	rm -f "$pkgdir/opt/x86-64-v4-uclibc-bleeding-edge/{buildroot.config,relocate-sdk.sh,summary.csv,share/buildroot/sdk-location}"
}
