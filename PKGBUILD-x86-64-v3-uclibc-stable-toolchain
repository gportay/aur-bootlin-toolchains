pkgname=x86-64-v3-uclibc-stable-toolchain
pkgver=2023.08
pkgrel=1
pkgdesc="Ready-to-use cross-compilation toolchain provided by bootlin.com"
arch=("x86_64")
url="https://toolchains.bootlin.com/"
license=("GPL")
source=("https://toolchains.bootlin.com/downloads/releases/toolchains/x86-64-v3/tarballs/x86-64-v3--uclibc--stable-2023.08-1.tar.bz2")
sha256sums=('addce3971dd028ea8772e3f683d2b65e5703de1279d4f5d0c82269570dfb98c2')

build() {
	cd "x86-64-v3--uclibc--stable-2023.08-1"

	sh relocate-sdk.sh "/opt/x86-64-v3-uclibc-stable"
}

package() {
	options=(!strip)

	cd "x86-64-v3--uclibc--stable-2023.08-1"

	mkdir -p "$pkgdir/opt/x86-64-v3-uclibc-stable/"
	cp -a * "$pkgdir/opt/x86-64-v3-uclibc-stable/"
	rm -f "$pkgdir/opt/x86-64-v3-uclibc-stable/{buildroot.config,relocate-sdk.sh,summary.csv,share/buildroot/sdk-location}"
}
