# Maintainer: GaÃ«l PORTAY <gael.portay@gmail.com>

pkgname=mips32r5el-uclibc-bleeding-edge-toolchain
pkgver=2024.05
pkgrel=1
pkgdesc="Ready-to-use cross-compilation toolchain provided by bootlin.com"
arch=("x86_64")
url="https://toolchains.bootlin.com/"
license=("GPL")
source=("https://toolchains.bootlin.com/downloads/releases/toolchains/mips32r5el/tarballs/mips32r5el--uclibc--bleeding-edge-2024.05-1.tar.xz"
        "profile.sh-mips32r5el-uclibc-bleeding-edge-toolchain")
install="hooks.install-mips32r5el-uclibc-bleeding-edge-toolchain"
sha256sums=('98dcb8efe8f4897c6e7e6088238789c4f42593d4b08739cb7cb8dcd157765887'
            '8eb52ff976fdcc504935473d51bed073f7fa83a25c33c1e2608c02d2cdc328e0')

build() {
	cd "${pkgname%-toolchain}--$pkgver-${pkgrel%%.*}"

	sh relocate-sdk.sh "/opt/mips32r5el-uclibc-bleeding-edge"
}

package() {
	options=(!strip)

	cd "${pkgname%-toolchain}--$pkgver-${pkgrel%%.*}"

	mkdir -p "$pkgdir/opt/mips32r5el-uclibc-bleeding-edge/"
	cp -a * "$pkgdir/opt/mips32r5el-uclibc-bleeding-edge/"
	rm -f "$pkgdir/opt/mips32r5el-uclibc-bleeding-edge/{buildroot.config,relocate-sdk.sh,summary.csv,share/buildroot/sdk-location}"

	mkdir -p "$pkgdir/etc/profile.d/"
	install -m0644 "$srcdir/profile.sh-mips32r5el-uclibc-bleeding-edge-toolchain" "$pkgdir/etc/profile.d/mips32r5el-uclibc-bleeding-edge-toolchain.sh"
}
