pkgname=mips32r5el-uclibc-bleeding-edge-toolchain
pkgver=2023.08
pkgrel=1
pkgdesc="Ready-to-use cross-compilation toolchain provided by bootlin.com"
arch=("x86_64")
url="https://toolchains.bootlin.com/"
license=("GPL")
source=("https://toolchains.bootlin.com/downloads/releases/toolchains/mips32r5el/tarballs/mips32r5el--uclibc--bleeding-edge-2023.08-1.tar.bz2")
sha256sums=('e0d320e1bb1c4d7f0f6724368cbd4f79868123e1b8cfd06ee14c2a20d69484ff')

build() {
	cd "mips32r5el--uclibc--bleeding-edge-2023.08-1"

	sh relocate-sdk.sh "/opt/mips32r5el-uclibc-bleeding-edge"
}

package() {
	options=(!strip)

	cd "mips32r5el--uclibc--bleeding-edge-2023.08-1"

	mkdir -p "$pkgdir/opt/mips32r5el-uclibc-bleeding-edge/"
	cp -a * "$pkgdir/opt/mips32r5el-uclibc-bleeding-edge/"
	rm -f "$pkgdir/opt/mips32r5el-uclibc-bleeding-edge/{buildroot.config,relocate-sdk.sh,summary.csv,share/buildroot/sdk-location}"
}
