pkgname=sh-sh4-musl-bleeding-edge-toolchain
pkgver=2023.08
pkgrel=1
pkgdesc="Ready-to-use cross-compilation toolchain provided by bootlin.com"
arch=("x86_64")
url="https://toolchains.bootlin.com/"
license=("GPL")
source=("https://toolchains.bootlin.com/downloads/releases/toolchains/sh-sh4/tarballs/sh-sh4--musl--bleeding-edge-2023.08-1.tar.bz2")
sha256sums=('cff9a006550ca7f6d5e71b10043b2ade1d379ad5859202f7ff9dc460348c7f82')

build() {
	cd "sh-sh4--musl--bleeding-edge-2023.08-1"

	sh relocate-sdk.sh "/opt/sh-sh4-musl-bleeding-edge"
}

package() {
	options=(!strip)

	cd "sh-sh4--musl--bleeding-edge-2023.08-1"

	mkdir -p "$pkgdir/opt/sh-sh4-musl-bleeding-edge/"
	cp -a * "$pkgdir/opt/sh-sh4-musl-bleeding-edge/"
	rm -f "$pkgdir/opt/sh-sh4-musl-bleeding-edge/{buildroot.config,relocate-sdk.sh,summary.csv,share/buildroot/sdk-location}"
}
