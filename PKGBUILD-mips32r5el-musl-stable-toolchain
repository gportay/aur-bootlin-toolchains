# Maintainer: GaÃ«l PORTAY <gael.portay@gmail.com>

pkgname=mips32r5el-musl-stable-toolchain
pkgver=2024.02
pkgrel=1
pkgdesc="Ready-to-use cross-compilation toolchain provided by bootlin.com"
arch=("x86_64")
url="https://toolchains.bootlin.com/"
license=("GPL")
source=("https://toolchains.bootlin.com/downloads/releases/toolchains/mips32r5el/tarballs/mips32r5el--musl--stable-2024.02-1.tar.bz2"
        "profile.sh-mips32r5el-musl-stable-toolchain")
install="hooks.install-mips32r5el-musl-stable-toolchain"
sha256sums=('c6b03bfb2f00476cc38b38f910c8a3884b8b77d7aecb307fdb6f06b18ff3456a'
            'a678f7888e8273bf931f63625fe61b52be054e00eeb91246bd14ac8470c7f1e7')

build() {
	cd "mips32r5el--musl--stable-2024.02-1"

	sh relocate-sdk.sh "/opt/mips32r5el-musl-stable"
}

package() {
	options=(!strip)

	cd "mips32r5el--musl--stable-2024.02-1"

	mkdir -p "$pkgdir/opt/mips32r5el-musl-stable/"
	cp -a * "$pkgdir/opt/mips32r5el-musl-stable/"
	rm -f "$pkgdir/opt/mips32r5el-musl-stable/{buildroot.config,relocate-sdk.sh,summary.csv,share/buildroot/sdk-location}"

	mkdir -p "$pkgdir/etc/profile.d/"
	install -m0644 "$srcdir/profile.sh-mips32r5el-musl-stable-toolchain" "$pkgdir/etc/profile.d/mips32r5el-musl-stable-toolchain.sh"
}
